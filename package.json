{
  "name": "anti-quota",
  "displayName": "Anti Quota",
  "description": "Antigravity 配额实时监控",
  "version": "1.0.1",
  "publisher": "fhyfhy17",
  "repository": {
    "type": "git",
    "url": "https://github.com/fhyfhy17/anti-quota"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "anti-quota.refresh",
        "title": "Anti Quota: 刷新配额"
      }
    ],
    "configuration": {
      "title": "Anti Quota",
      "properties": {
        "antiQuota.refreshInterval": {
          "type": "number",
          "default": 10,
          "description": "自动刷新间隔（秒），默认10秒"
        },
        "antiQuota.enabled": {
          "type": "boolean",
          "default": true,
          "description": "是否启用自动刷新"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  }
}