{
  "name": "anti-quota",
  "displayName": "Anti Quota",
  "description": "Antigravity 多账号配额管理 - 实时刷新、无感切换、自动切换",
  "version": "2.0.8",
  "publisher": "fhyfhy17",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/fhyfhy17/anti-quota"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "antigravity",
    "quota",
    "account",
    "switch",
    "gemini",
    "claude"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:antiQuota.accountsView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "anti-quota.refresh",
        "title": "Anti Quota: 刷新当前账号配额",
        "icon": "$(sync)"
      },
      {
        "command": "anti-quota.refreshAll",
        "title": "Anti Quota: 刷新所有账号配额"
      },
      {
        "command": "anti-quota.showQuotaDetails",
        "title": "Anti Quota: 显示配额详情"
      },
      {
        "command": "anti-quota.openAccountManager",
        "title": "Anti Quota: 打开账号管理"
      },
      {
        "command": "anti-quota.addAccount",
        "title": "Anti Quota: 添加账号"
      },
      {
        "command": "anti-quota.switchAccount",
        "title": "Anti Quota: 切换账号"
      },
      {
        "command": "anti-quota.toggleAutoSwitch",
        "title": "Anti Quota: 开关自动切换"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "antiQuotaSidebar",
          "title": "Anti Quota",
          "icon": "resources/activity-icon.svg"
        }
      ]
    },
    "views": {
      "antiQuotaSidebar": [
        {
          "type": "webview",
          "id": "antiQuota.accountsView",
          "name": "账号管理",
          "icon": "resources/activity-icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "Anti Quota",
      "properties": {
        "antiQuota.refreshInterval": {
          "type": "number",
          "default": 10,
          "minimum": 10,
          "maximum": 600,
          "description": "配额自动刷新间隔（秒）"
        },
        "antiQuota.enabled": {
          "type": "boolean",
          "default": true,
          "description": "是否启用自动刷新"
        },
        "antiQuota.autoSwitch.enabled": {
          "type": "boolean",
          "default": true,
          "description": "是否启用配额低于阈值时自动切换账号"
        },
        "antiQuota.autoSwitch.threshold": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "description": "自动切换触发阈值（配额百分比）"
        },
        "antiQuota.autoSwitch.checkInterval": {
          "type": "number",
          "default": 60,
          "minimum": 30,
          "maximum": 600,
          "description": "自动切换检查间隔（秒）"
        },
        "antiQuota.autoSwitch.notifyOnSwitch": {
          "type": "boolean",
          "default": true,
          "description": "自动切换时是否显示通知"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  }
}